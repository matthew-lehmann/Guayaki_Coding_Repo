        <!-- Custom Scripts -->
        <script>
            function onModalOpen(){
                var checkUser = document.getElementById("create_user_name");
                var checkPass = document.getElementById("create_password");
                var confirmPass = document.getElementById("confirm_password");

                confirmPass.onkeyup = function(){
                    if ((checkUser.value != '') && (checkPass.value != '') && (confirmPass.value !='')){
                        enableSignUp(checkPass, confirmPass);
                    }
                }
            }
            function enableSignUp(checkPass, confirmPass){
                var signUpButton = document.getElementById("sign_up_button");
                if (checkPass.value == confirmPass.value){
                    signUpButton.disabled = false;
                }
            }
            function validate(){
                var username = document.getElementById('user_name');
                var password = document.getElementById('user_password');
            }
        </script>

        </head>
    	<body>
    		<nav class="navbar navbar-expand-lg bg-dark navbar-dark">
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapse_target">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="collapse_target">
                <ul class="navbar-nav ml-1">
