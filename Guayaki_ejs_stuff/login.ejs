                    </li>
                    <% if (token == false){ %>
                      <li class="nav-item">
                        <a class="nav-link" href="/login">My Profile</a>
                      </li>
                    <%}%>
                    <% if (token == true) { %>
                      <form action="/mypage/user" method="get">
                        <li class="nav-item">
                          <button type="submit" class="btn btn-default">My Profile</button>
                        </li>
                      </form>
                    <%}%>
                </ul>
              </div>
            </nav>
            <div class="container">
                <div class="d-flex justify-content-center h-100">
                    <div class="card mt-5">
                        <div class="card-header">
                            <h1>Login</h1>
                        </div>
                        <div class="card-body">
                            <form action="/mypage/userLogin" method="post">
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <input type="text" class="form-control" placeholder="Username" name="user_name" id="user_name">
                                </div>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    </div>
                                    <input type="password" class="form-control" placeholder="Password" name="user_password" id="user_password">
                                </div>
                                <button type="submit" class="btn btn-primary btn-block">Login</button>
                            </form>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-center links">Don't have an account?
                                <a href="#CreateAccount" data-toggle="modal" onclick="onModalOpen()">&nbsp;Sign Up</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="CreateAccount" class="modal fade">
                <div class="modal-dialog modal-login">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Sign Up page</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        </div>
                        <div class="modal-body">
                            <form action="/mypage/userSignup" method="post"> 
                                <div class="input-group form-group">
                                    <input type="text" class="form-control" name="create_user_name" placeholder="Username"
                                        required="required" id="create_user_name">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" name="create_password" placeholder="Password"
                                        required="required" id="create_password">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" name="confirm_password"
                                        placeholder="Confirm Password" required="required" id="confirm_password">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" name="profile_picture"
                                        placeholder="Find a profile picture you like online, put the link here" required="required" id="profile_picture">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" name="bio"
                                        placeholder="Add a short bio (300 characters max)" required="required" id="bio">
                                </div>
                                <button id="sign_up_button" type="submit" class="btn btn-primary btn-block login-btn" disabled>Sign Up</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
    		
